<div class="container">
  <!-- Header -->
  <div class="align-items-center justify-content-center">
    <div class="jumbotron bg-dark text-center text-white">
      <h1 class="display-2">Projects</h1>
      <% if is_admin? %>
        <p><%= link_to "Create new project", new_project_path %></p>
      <% end %> 
    </div>
    <!-- Project Cards Grid -->
    <% if @projects.any? %>
      <div class="row row-cols-1 row-cols-md-2">
        <% @projects.each do |project| %>
          <div class="col mb-4">
            <div class="card">
              <% if project.image.attachment != nil %>
                <%= image_tag(project.image, class:"card-img-top", alt:"project image") %>
              <% end %>
              <div class="card-body">
                <h5 class="card-title"><%= link_to project.title, project_path(project) %></h5>
                <p class="card-text"><%= project.description %></p>
              </div>
            </div>
          </div>
        <% end %> 
      </div>
    <% else %>
      <div class="card">
        <p>There are no projects yet.</p>
      </div>
    <% end %>
  </div>
</div>